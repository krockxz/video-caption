// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum VideoStatus {
  uploading
  processing
  captioning
  completed
  failed
}

enum CaptionStyle {
  default
  newsbar
  karaoke
}

enum RenderStatus {
  pending
  rendering
  completed
  failed
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())

  // Relations
  videos Video[]

  @@map("users")
}

model Video {
  id        String      @id @default(cuid())
  userId    String
  title     String
  fileName  String
  filePath  String
  duration  Float?      // in seconds
  uploadedAt DateTime   @default(now())
  status    VideoStatus @default(uploading)

  // Relations
  user     User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  captions Caption[]
  renders  Render[]

  @@map("videos")
}

model Caption {
  id        String        @id @default(cuid())
  videoId   String
  text      String
  startTime Float         // in seconds
  endTime   Float         // in seconds
  language  String        @default("en-US")
  style     CaptionStyle  @default(default)

  // Relations
  video Video @relation(fields: [videoId], references: [id], onDelete: Cascade)

  @@map("captions")
}

model Render {
  id            String       @id @default(cuid())
  videoId       String
  captionStyle  String
  status        RenderStatus @default(pending)
  outputPath    String?      // null when not completed
  createdAt     DateTime     @default(now())

  // Relations
  video Video @relation(fields: [videoId], references: [id], onDelete: Cascade)

  @@map("renders")
}